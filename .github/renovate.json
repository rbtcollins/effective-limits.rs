{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "git-submodules": {
        "enabled": true
    },
    "github-actions": {
        "fileMatch": [
            "^ci/actions-templates/.*\\.yaml$"
        ]
    },
    "labels": [
        "dependencies"
    ],
    "prCreation": "immediate",
    "stabilityDays": 3,
    "lockFileMaintenance": {
        "enabled": true
    }
}